<article class='post'>

  <div class='title'>

    <a href='{{post_url}}' target='_blank'>{{title}}</a>
    <span>({{format_url post_url}})</span>

  </div>

  {{!-- <div class='description'>
    {{description}}
  </div> --}}

  <div class='meta'>

    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    {{comments.length}}
    {{format_plural 'Comment' comments.length}}
    <a href='/post/{{id}}'><h4>Comment Section</h4></a>

  </div>

</article>